<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"

        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/search_back"
            android:layout_width="40dp"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/back_icon_press" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:background="@drawable/selector_back_btn"
                android:hint="请输入专辑关键字"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/shape_edit_text_cursor" />

            <ImageView
                android:id="@+id/search_input_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/input_delete_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">

            </ImageView>
        </RelativeLayout>


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:paddingRight="5dp"
            android:id="@+id/search_txt_btn"
            android:textColor="@color/main_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>